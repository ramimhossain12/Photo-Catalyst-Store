<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient_8"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello User !"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/textView"
            android:textColor="#FFFFFF"
            android:textSize="100px"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/hy"/>
    </LinearLayout>





    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Start  Now"
        android:textSize="65px"
        android:textColor="#FF5722"
        />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="@drawable/gallery"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"

        android:orientation="vertical"
        >

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:sparkbutton_activeImage="@drawable/upload"
            app:sparkbutton_inActiveImage="@drawable/bg_btn_welcome"
            app:sparkbutton_iconSize="100dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            app:sparkbutton_primaryColor="@color/primary_color"
            app:sparkbutton_animationSpeed="1.0"
            app:sparkbutton_secondaryColor="@color/secondary_color"
            />





    </LinearLayout>
















</LinearLayout>